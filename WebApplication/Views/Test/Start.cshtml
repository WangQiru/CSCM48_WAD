@model WebApplication.ViewModels.QuestionOptionViewModel

@{
    ViewBag.Title = "Start";
}

<h1>@Model.MCQModels.Title</h1>

@Html.AntiForgeryToken()

<div class="row">
    <div class="col-lg-10 col-lg-push-1">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @Model.MCQModels.Title
            </div>
            @{
                int counter = 1;
                int counter2 = 1;
                int max = Model.QuestionModelsList.Count();
                string str = "active";
            }

            <style>
                .nav-custom > li.active > a,
                .nav-custom > li.active > a:hover,
                .nav-custom > li.active > a:focus {
                    color: #ffffff;
                    background-color: #d9534f;
                }

                .nav-custom > li.answered > a,
                .nav-custom > li.active.answered > a:hover,
                .nav-custom > li.answered > a:focus {
                    color: #ffffff;
                    background-color: #3fad46;
                }

                .nav-custom > li.active.answered > a {
                    color: #ffffff;
                    background-color: #d9534f;
                }

                .nav-custom > li.answered > a:hover {
                    color: #3fad46;
                    background-color: #eeeeee;
                }
            </style>

            <div class="panel-body">
                <ul class="nav nav-pills nav-custom">
                    @foreach (var question in Model.QuestionModelsList)
                    {
                        if (counter2 == 1)
                        {
                            str = "active";
                        }
                        else
                        {
                            str = "";
                        }
                        <li class="@str">
                            <a href="#pills-@counter2" data-toggle="tab" aria-expanded="false">Question @counter2</a>
                        </li>
                        counter2++;
                    }
                </ul>


                <div class="tab-content">
                    @foreach (var question in Model.QuestionModelsList)
                    {
                        if (counter == 1)
                        {
                            str = "tab-pane fade in active";
                        }
                        else
                        {
                            str = "tab-pane fade";
                        }

                        <div class="@str" id="pills-@counter">
                            <h1>@question.Text</h1>
                            <hr />
                            <div class="col-lg-12">
                                <div class="row">
                                    @for (int i = 0; i < Model.QuestionModelsList[counter - 1].OptionsModelsList.Count; i += 2)
                                    {
                                        <div class="col-lg-3 col-md-3 col-sm-3">
                                            @if (i == 0)
                                            {
                                                <h2><span id="optionA-@counter" qno="@question.ID"><strong>A </strong></span></h2>
                                            }
                                            @if (i == 2)
                                            {
                                                <h2><span id="optionB-@counter" qno="@question.ID"><strong>B </strong></span></h2>
                                            }
                                            @if (i == 4)
                                            {
                                                <h2><span id="optionC-@counter" qno="@question.ID"><strong>C </strong></span></h2>
                                            }
                                            @if (i == 6)
                                            {
                                                <h2><span id="optionD-@counter" qno="@question.ID"><strong>D </strong></span></h2>
                                            }

                                            @Model.QuestionModelsList[counter - 1].OptionsModelsList[i].Text

                                            <br /><br />
                                        </div>
                                    }
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 col-md-4 pull-right">
                                        <label>Answer:&nbsp;&nbsp;</label>
                                        <label class="radio-inline">
                                            <input type="radio" name="optionRadio-@counter" id="optionRadioA-@counter" seqno="@counter-1" qno="@question.ID" value="@Model.QuestionModelsList[counter - 1].OptionsModelsList[0].ID">A
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="optionRadio-@counter" id="optionRadioB-@counter" seqno="@counter-1" qno="@question.ID" value="@Model.QuestionModelsList[counter - 1].OptionsModelsList[2].ID">B
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="optionRadio-@counter" id="optionRadioC-@counter" seqno="@counter-1" qno="@question.ID" value="@Model.QuestionModelsList[counter - 1].OptionsModelsList[4].ID">C
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="optionRadio-@counter" id="optionRadioD-@counter" seqno="@counter-1" qno="@question.ID" value="@Model.QuestionModelsList[counter - 1].OptionsModelsList[6].ID">D
                                        </label>

                                    </div>
                                </div>

                                <br />
                                <hr />
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                        @if (counter != 1)
                                        {
                                            <a class="btn btn-primary previousButton">Previous</a>
                                        }
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                        @if (counter != max)
                                        {
                                            <a class="btn btn-primary pull-right nextButton">Next</a>
                                        }
                                        else
                                        {
                                            <a href="#" class="btn btn-danger pull-right" id="submitPopover" title="Confirmation" data-toggle="popover" data-placement="auto right" data-trigger="focus" data-html="true" data-content='<a class="btn btn-sm btn-danger" id="submit">Yes</a><a class="btn btn-sm btn-success pull-right" >No</a>'>Submit</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        counter++;
                    }
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function (){

            function ResponseModels(){
                var self= this;
                self.MCQID = @Html.Raw(Json.Encode(Model.MCQModels.ID));
            }

            $('[data-toggle="popover"]').popover();

            var things = [];

            var optionList = new Array(@max);

            $('.nextButton').click(function () {
                $('.nav-pills > .active').next('li').find('a').trigger('click');
            });

            $('.previousButton').click(function (){
                $('.nav-pills > .active').prev('li').find('a').trigger('click');
            });

            $('input[type="radio"]').on("click", function () {
                $('.nav-pills > .active').addClass('answered answeredRemoved');
                var qno = $(this).attr('qno');
                var option = $(this).val();
                var str = option + '-' + qno;
                $('span[qno=' + qno + ']').removeClass("text-danger");
                $('#option' + str).addClass("text-danger");

                var seqno = $(this).attr('seqno');
               // var responseModel = new ResponseModels();
                var obj = {
                    MCQID:@Html.Raw(Json.Encode(Model.MCQModels.ID)),
                    OptionID: option,
                    QuestionID: qno
                };

                things.push(obj);

               // responseModel.OptionID = option;
                //responseModel.QuestionID = qno;
                //optionList[seqno]=responseModel;
            });

            $('.tab-content').on("click", "#submit", function () {
                var data = { __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(), answerList: things};
                console.log(data);
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AjaxCreate", "Response")",
                    data: data,
                    success: function (res) {
                    }
                });
            });
        });
    </script>
}
