@model IEnumerable<WebApplication.ViewModels.MCQQuestionModel>


@{
    ViewBag.Title = "Test List";
}

<h2>Test List</h2>

<div class="row" style="margin:30px 0 30px 0;">

    @foreach (var item in Model)
    {
        if(item.ReleaseDate < DateTime.Now) { 
        int days = (item.DueDate - DateTime.Now).Days;
        string bg;
        if (days > 3 && days < 5)
        { bg = "yellow"; }
        else if (days < 3)
        { bg = "red"; }
        else
        { bg = "primary"; }
        <div class="col-lg-6 col-md-12">
            <div class="panel panel-@bg card">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-5">
                            <h4><b>@Html.DisplayFor(modelItem => item.MCQTitle)</b></h4>
                        </div>
                        <div class="col-xs-7 text-right">
                            <div class="huge">@Html.DisplayFor(modelItem => item.QuestionCount) Questions</div>
                            <div>Due: @Html.DisplayFor(modelItem => item.DueDate)</div>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Details", "Test", new { id = item.MCQID })">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        }
        else
        {
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-danger card">
                    <div class="panel-heading">
                       <h2>abcdwfg</h2>
                    </div>
                </div>
            </div>
        }
    }
</div>