@model IEnumerable<WebApplication.ViewModels.MCQQuestionModel>


@{
    ViewBag.Title = "Test List";
}

<h2>Test List</h2>


<div class="row" style="margin-bottom:30px;">
    @{
        DateTime TimeNow = DateTime.Now;
    }
    @foreach (var item in Model)
    {
        int days = (item.DueDate - TimeNow).Days;
        string bg;
        if (days > 3 && days < 5)
        { bg = "yellow"; }
        else if (days < 3)
        { bg = "red"; }
        else
        { bg = "primary"; }


        <div class="col-lg-3 col-md-6">
            <div class="panel panel-@bg card">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <h4><b>@Html.DisplayFor(modelItem => item.MCQTitle)</b></h4>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@Html.DisplayFor(modelItem => item.QuestionCount) Questions</div>
                            <div>Due: @Html.DisplayFor(modelItem => item.DueDate)</div>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Details", "Test", new { id = item.MCQID })">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    }
</div>

@if (Request.IsAuthenticated && Session["loginMessage"] != null)
{
    @section scripts {
        <script>
            var str = '@Session["loginMessage"]';

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": ClearSession(),
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "50000",
                "extendedTimeOut": "10000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr["info"]('@Html.ActionLink("View Now", "Index", "Test", null, new { @class = "btn btn-danger btn-sm" })', str);

            function ClearSession() {
                var data = { type: 'loginMessage', __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() };
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("ClearSession", "Session")",
                    data: data
                });
            }
        </script>
    }
}